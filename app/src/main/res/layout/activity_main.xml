<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sujitm.cryptocode.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher_background"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="43dp">

        <Button
            android:id="@+id/button8"
            android:layout_width="310dp"
            android:layout_height="70dp"
            android:layout_marginBottom="92dp"
            android:background="#84FFFF"
            android:onClick="md5"
            android:text="MD5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.623"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button6"
            android:layout_width="310dp"
            android:layout_height="70dp"
            android:layout_marginBottom="40dp"

            android:background="#84FFFF"
            android:onClick="aes"
            android:text="AES"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.613"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button7"
            android:layout_width="310dp"
            android:layout_height="70dp"
            android:layout_marginBottom="40dp"
            android:background="#84FFFF"
            android:onClick="des"
            android:text="DES"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.613"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button9"
            android:layout_width="310dp"
            android:layout_height="70dp"
            android:layout_marginBottom="40dp"
            android:background="#84FFFF"
            android:onClick="rsa"
            android:text="RSA"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.623"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="415dp"
            android:layout_height="70dp"
            android:background="#972417D3"
            android:paddingLeft="60dp"
            android:text="Crypto Code.."
            android:textAllCaps="false"
            android:textColor="#413950"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            app:fontFamily="sans-serif-condensed-light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="The Encryptor"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:fontFamily="sans-serif-thin"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.904"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Encryptor "
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#6781A1"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.47" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
